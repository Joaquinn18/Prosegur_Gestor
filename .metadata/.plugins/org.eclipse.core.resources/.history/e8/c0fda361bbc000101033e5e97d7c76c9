package GUI;

import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import java.awt.*;
import java.util.List;
import Modelado.HistorialEntrega;

public class HistorialEntregaFrame extends JFrame{
	 private JTable table;

	    public HistorialEntregaFrame(List<HistorialEntrega> historial) {
	        setTitle("Historial de Entregas");
	        setSize(800, 400);
	        setLocationRelativeTo(null);
	        setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
	        setLayout(new BorderLayout());

	        // Crear columnas
	        String[] columnas = {"ID", "Fecha", "Hora", "Motorizado", "Cliente", "Tarjeta", "Estado"};

	        // Crear modelo
	        DefaultTableModel modelo = new DefaultTableModel(columnas, 0);

	        // Agregar datos del historial
	        for (HistorialEntrega h : historial) {
	            Object[] fila = {
	                h.getId(),
	                h.getFecha(),
	                h.getHora(),
	                h.getNombreMotorizado(),
	                h.getNombreCliente(),
	                h.getNroTarjeta(),
	                h.getEstado()
	            };
	            modelo.addRow(fila);
	        }

	        table = new JTable(modelo);
	        JScrollPane scrollPane = new JScrollPane(table);
	        add(scrollPane, BorderLayout.CENTER);
	    }

}
