package GUI;

import javax.swing.*;
import java.awt.*;

public class Autoresgui extends JDialog {

    private static final long serialVersionUID = 1L;

    private static final Color PROSEGUR_YELLOW = new Color(255, 209, 0);
    private static final Color PROSEGUR_BLACK = new Color(18, 18, 18);

    public Autoresgui(JFrame parent) {

        super(parent, "Autores del Proyecto", true); // ← TRUE = MODAL
        setSize(600, 420);
        setLocationRelativeTo(parent);
        setResizable(false);

        JPanel content = new JPanel(new BorderLayout());
        content.setBackground(PROSEGUR_BLACK);
        setContentPane(content);

        JLabel titulo = new JLabel("⚫ Autores del Sistema de Mensajería", SwingConstants.CENTER);
        titulo.setFont(new Font("Montserrat", Font.BOLD, 22));
        titulo.setForeground(PROSEGUR_YELLOW);
        titulo.setBorder(BorderFactory.createEmptyBorder(20, 10, 20, 10));
        content.add(titulo, BorderLayout.NORTH);

        // Tabs para autores
        JTabbedPane tabs = new JTabbedPane();
        tabs.setFont(new Font("Montserrat", Font.BOLD, 14));

        tabs.addTab("Joaquín",
                crearPanelAutor("Joaquín Herrera", "Ingeniería de Sistemas", "images/joaquin"));

        tabs.addTab("Integrante 2",
                crearPanelAutor("Autor 2", "Desarrollador Backend", "images/autor2.jpg"));

        content.add(tabs, BorderLayout.CENTER);
    }

    private JPanel crearPanelAutor(String nombre, String rol, String rutaImagen) {

        JPanel panel = new JPanel(new BorderLayout());
        panel.setBackground(Color.WHITE);
        panel.setBorder(BorderFactory.createEmptyBorder(30, 30, 30, 30));

        JLabel foto;
        try {
            ImageIcon icon = new ImageIcon(rutaImagen);
            Image img = icon.getImage().getScaledInstance(150, 150, Image.SCALE_SMOOTH);
            foto = new JLabel(new ImageIcon(img));
        } catch (Exception ex) {
            foto = new JLabel("Foto no disponible", SwingConstants.CENTER);
        }

        foto.setHorizontalAlignment(SwingConstants.CENTER);

        JLabel lblNombre = new JLabel(nombre, SwingConstants.CENTER);
        lblNombre.setFont(new Font("Montserrat", Font.BOLD, 20));
        lblNombre.setForeground(PROSEGUR_BLACK);

        JLabel lblRol = new JLabel(rol, SwingConstants.CENTER);
        lblRol.setFont(new Font("Montserrat", Font.PLAIN, 16));
        lblRol.setForeground(PROSEGUR_BLACK);

        panel.add(foto, BorderLayout.NORTH);
        panel.add(lblNombre, BorderLayout.CENTER);
        panel.add(lblRol, BorderLayout.SOUTH);

        return panel;
    }
}
