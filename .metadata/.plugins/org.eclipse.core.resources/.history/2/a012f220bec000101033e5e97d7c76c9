package Modelado;

import java.util.ArrayList;
import java.util.List;

public class HistorialEntrega {
    private int id;
    private String fecha;
    private String hora;
    private String nombreMotorizado;
    private String nombreCliente;
    private String nroTarjeta;
    private String estado;

    // Lista estática para simular el historial (en lugar de BD por ahora)
    private static List<HistorialEntrega> historial = new ArrayList<>();
    private static int contadorId = 1;

    public HistorialEntrega(int id, String fecha, String hora, String nombreMotorizado,
                            String nombreCliente, String nroTarjeta, String estado) {
        this.id = id;
        this.fecha = fecha;
        this.hora = hora;
        this.nombreMotorizado = nombreMotorizado;
        this.nombreCliente = nombreCliente;
        this.nroTarjeta = nroTarjeta;
        this.estado = estado;
    }

    public int getId() { return id; }
    public String getFecha() { return fecha; }
    public String getHora() { return hora; }
    public String getNombreMotorizado() { return nombreMotorizado; }
    public String getNombreCliente() { return nombreCliente; }
    public String getNroTarjeta() { return nroTarjeta; }
    public String getEstado() { return estado; }

    // Método para obtener el historial acumulado
    public static List<HistorialEntrega> obtenerHistorial() {
        return historial;
    }

    // Método para agregar una nueva entrega al historial (simulación)
    public static void agregarAlHistorial(String fecha, String hora, String nombreMotorizado,
                                          String nombreCliente, String nroTarjeta, String estado) {
        historial.add(new HistorialEntrega(contadorId++, fecha, hora, nombreMotorizado,
                                           nombreCliente, nroTarjeta, estado));
    }
}
