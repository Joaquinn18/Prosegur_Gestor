package Controlador;

import Modelado.HistorialEntrega;
import java.util.ArrayList;
import java.util.List;

public class HistorialController {
	  private List<HistorialEntrega> historial;

	    public HistorialController() {
	        historial = new ArrayList<>();
	    }

	    // Agregar nueva entrega al historial
	    public void agregarEntrega(HistorialEntrega entrega) {
	        historial.add(entrega);
	        System.out.println("Entrega registrada correctamente.");
	    }

	    // Listar todas las entregas
	    public List<HistorialEntrega> obtenerTodasLasEntregas() {
	        return historial;
	    }

	    // Buscar entregas por motorizado
	    public List<HistorialEntrega> buscarPorMotorizado(String nombreMotorizado) {
	        List<HistorialEntrega> resultados = new ArrayList<>();
	        for (HistorialEntrega e : historial) {
	            if (e.getRepartidor().equalsIgnoreCase(nombreMotorizado)) {
	                resultados.add(e);
	            }
	        }
	        return resultados;
	    }

	    // Buscar entregas por fecha exacta
	    public List<HistorialEntrega> buscarPorFecha(String fecha) {
	        List<HistorialEntrega> resultados = new ArrayList<>();
	        for (HistorialEntrega e : historial) {
	            if (e.getFechaEvento().equalsIgnoreCase(fecha)) {
	                resultados.add(e);
	            }
	        }
	        return resultados;
	    }

	    // Imprimir todo el historial (Ãºtil para consola)
	    public void imprimirHistorial() {
	        if (historial.isEmpty()) {
	            System.out.println("No hay entregas registradas.");
	            return;
	        }
	        for (HistorialEntrega e : historial) {
	            System.out.println(e);
	        }
	    }

}
