package GUI;
import javax.swing.*;  
import java.awt.*;     

public class LoginGUI extends JFrame { 
	private static final long serialVersionUID = 1L;
	 private JTextField txtUsuario;
	    private JPasswordField txtPassword;
	    private JButton btnLogin;
	    private JLabel label_2;
	    private JLabel lblCredencialesDePrueba;

	    public LoginGUI() {
	        setTitle("Login - Sistema de Mensajería");
	        setSize(300, 279);
	        setDefaultCloseOperation(EXIT_ON_CLOSE);
	        setLocationRelativeTo(null);

	        JPanel panel = new JPanel();
	        panel.setLayout(null);

	        JLabel label = new JLabel("Usuario:");
	        label.setBounds(24, 37, 139, 50);
	        label.setFont(new Font("Times New Roman", Font.BOLD, 12));
	        panel.add(label);
	        txtUsuario = new JTextField();
	        txtUsuario.setBounds(107, 45, 139, 34);
	        panel.add(txtUsuario);

	        JLabel lblProsegurGdrt = new JLabel("PROSEGUR GDT");
	        lblProsegurGdrt.setBounds(87, 11, 139, 33);
	        lblProsegurGdrt.setFont(new Font("Times New Roman", Font.BOLD, 12));
	        panel.add(lblProsegurGdrt);
	        txtPassword = new JPasswordField();
	        txtPassword.setBounds(107, 90, 139, 34);
	        panel.add(txtPassword);

	        btnLogin = new JButton("Ingresar");
	        btnLogin.setBounds(66, 143, 139, 34);
	        btnLogin.setFont(new Font("Times New Roman", Font.BOLD, 14));
	        panel.add(btnLogin);

	        getContentPane().add(panel);


	        btnLogin.addActionListener(e -> {
	        	 
		            
		        });
	                btnLogin.addActionListener(e -> {
	                    String usuario = txtUsuario.getText() != null ? txtUsuario.getText().trim() : "";
	                    char[] passwordChars = txtPassword.getPassword();
	                    String contrasena = passwordChars != null ? new String(passwordChars) : "";

	                    if ("admin".equals(usuario) && "admin".equals(contrasena)) {
	                        dispose();
	                        new MainMenu().setVisible(true);
	                    } else {
	                        JOptionPane.showMessageDialog(this,
	                                "Usuario o contraseña incorrectos",
	                                "Error",
	                                JOptionPane.ERROR_MESSAGE);
	                        txtPassword.setText("");
	                        
	                        label_2 = new JLabel("Contraseña:");
	                        label_2.setBounds(24, 91, 73, 33);
	                        label_2.setFont(new Font("Times New Roman", Font.BOLD, 12));
	                        panel.add(label_2);
	                        
	                        lblCredencialesDePrueba = new JLabel("Credenciales de prueba: admin / admin");
	                        lblCredencialesDePrueba.setBounds(24, 188, 206, 19);
	                        lblCredencialesDePrueba.setFont(new Font("Times New Roman", Font.PLAIN, 9));
	                        panel.add(lblCredencialesDePrueba);
	                        txtUsuario.requestFocusInWindow();
	                    }
	                   
	        });
	    }
}

